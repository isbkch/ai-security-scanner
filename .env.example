# Environment Variables for AI Security Scanner
# Copy this file to .env and fill in your values

# LLM API Keys (choose one based on your provider)
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Database Configuration
DB_PASSWORD=your_database_password_here

# GitHub Integration
GITHUB_TOKEN=your_github_token_here
GITHUB_WEBHOOK_SECRET=your_webhook_secret_here

# Optional: Override default settings
AI_SCANNER_DEBUG=false
AI_SCANNER_LOG_LEVEL=INFO
AI_SCANNER_LLM_PROVIDER=openai
AI_SCANNER_LLM_MODEL=gpt-4
AI_SCANNER_DB_HOST=localhost
AI_SCANNER_DB_PORT=5432
AI_SCANNER_DB_NAME=ai_security_scanner
AI_SCANNER_DB_USER=scanner